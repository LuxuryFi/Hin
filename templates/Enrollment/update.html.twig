{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.important {
			color: #336699;
		}
	</style>

{% endblock %}
{% block body %}
		  <div class="container-fluid mt-3">
      <h2 class="text-center mt-5 alert alert-primary">UPDATE ENROLLMENT</h2>
      <div class="col-md-6"></div>
          {{ form_start (form) }}
                <div class="form-group">
                    {{ form_label (form.course) }}
                    {{ form_widget (form.course, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label (form.student) }}
                    {{ form_widget (form.student, {'attr': {'class' : 'form-control'}}) }}
                </div>
			  	<div class="mb-3">
					<input type="submit" value="Submit" class="btn btn-primary">
					<input type="reset" value="Clear" class="btn btn-danger">
					<a href="/enrollment/index" class="btn btn-secondary">Back To Home</a>
				</div>
          {{ form_end (form)}}
  </div>

{% endblock %}
