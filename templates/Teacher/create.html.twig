{% extends "base.html.twig" %}


{% block title %}Create
{% endblock %}
{% block stylesheets %}
{{ parent() }}
<style type="text/css">
    .important {
        color: #336699;
    }

</style>

{% endblock %}
{% block body %}
<div class="container-fluid mt-3">
    <h2 class="text-center mt-5 alert alert-primary">CREATE TEACHER</h2>

    <div class="col-md-6"></div>
    {{ form_start (form) }}
    <div class="form-group">
        {{ form_label (form.teacher_name) }}
        {{ form_widget (form.teacher_name, {'attr': {'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label (form.teacher_description) }}
        {{ form_widget (form.teacher_description, {'attr': {'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label (form.teacher_summary) }}
        {{ form_widget (form.teacher_summary, {'attr': {'class' : 'form-control'}}) }}
    </div>
        <div class="form-group">
        {{ form_label (form.teacher_gender) }}
        {{ form_widget (form.teacher_gender, {'attr': {'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label (form.teacher_status) }}
        {{ form_widget (form.teacher_status, {'attr': {'class' : 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label (form.major) }}
        {{ form_widget (form.major, {'attr': {'class' : 'form-control'}}) }}
    </div>
    <div class="form-group text-center mt-3">
        <button class="btn btn-primary btn-lg">CREATE</button>
    </div>
    {{ form_end (form)}}
</div>

{% endblock %}
