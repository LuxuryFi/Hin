{% extends "base.html.twig" %}


{% block title %}Index
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{# <style type="text/css">
		.important {
			color: #336699;
		}
	</style> #}
{% endblock %}
{% block body %}
	<center> <h2 class="alert alert-primary"> Teacher List</h2> </center>
	<a href="/teacher/create" class="btn btn-primary">Add Teacher</a> <br><br>
	<table class="table">
		<tr>
			<th class="thead-dark">Name</th>
			<th class="thead-dark">Description</th>
			<th class="thead-dark">Summary</th>
			<th class="thead-dark">Major</th>
			<th class="thead-dark">Status</th>
			<th class="thead-dark">Gender</th>
			<th class="thead-dark">Option</th>
		</tr>
		{% for teacher in teachers %}
			<tr>
				<td>{{ teacher.getTeacherName() }}</td>
				<td>{{ teacher.getTeacherDescription() }}</td>
				<td>{{ teacher.getTeacherSummary() }}</td>
				<td>{{ teacher.getMajor.getMajorName}} </td>
				<td>
					{% if teacher.getTeacherStatus() == 0 %}
						Disable
					{% else %}
						Active
					{% endif %}
				</td>
				<td>
					{% if teacher.getTeacherGender() == 0 %}
						Female
					{% else %}
						Male
					{% endif %}
				</td>
				<td>
					<center>
						<a href="/teacher/update/{{teacher.getId()}}"> <i class="fa fa-pen"></i> </a>
						<a href="/teacher/detail/{{teacher.getId()}}"> <i class="fa fa-eye"></i> </a>
						<a href="/teacher/delete/{{teacher.getId()}}" onclick="Confirm('You sua')"> <i class="fa fa-trash" ></i> </a>
					</center>
				</td>
			</tr>
        	{% endfor %}
		</table>
{% endblock %}
