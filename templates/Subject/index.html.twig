{% extends "base.html.twig" %}


{% block title %}Index
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.important {
			color: #336699;
		}
	</style>
{% endblock %}
{% block body %}
	<h2 class="alert alert-primary"> <center>Subject List</center></h2>
	<a href="/subject/create" class="btn btn-primary">Add Subject</a> <br><br>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Option</th>
		</tr>
		{% for subject in categories %}
			<tr>
				<td>{{ subject.getSubjectName() }}</td>
				<td>{{ subject.getSubjectDescription() }}</td>
				<td>
					<a href="/subject/update/{{subject.getId()}}"> <i class="fa fa-pen"></i> </a>
					<a href="/subject/detail/{{subject.getId()}}"> <i class="fa fa-eye"></i> </a>
					<a href="/subject/delete/{{subject.getId()}}" onclick="Confirm('You sua')"> <i class="fa fa-trash" ></i> </a>
				</td>
			</tr>
        	{% endfor %}
		</table>
{% endblock %}
