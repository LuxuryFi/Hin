{% extends "base.html.twig" %}


{% block title %}Index
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.important {
			color: #336699;
		}
	</style>
{% endblock %}
{% block body %}
	<h2 class="alert alert-primary"> <center>Major List</center></h2>
	<a href="/major/create" class="btn btn-primary">Add Major</a> <br><br>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Option</th>
		</tr>
		{% for major in categories %}
			<tr>
				<td>{{ major.getMajorName() }}</td>
				<td>{{ major.getMajorDescription() }}</td>
				<td>
					<a href="/major/update/{{major.getId()}}"> <i class="fa fa-pen"></i> </a>
					<a href="/major/detail/{{major.getId()}}"> <i class="fa fa-eye"></i> </a>
					<a href="/major/delete/{{major.getId()}}" onclick="Confirm('You sua')"> <i class="fa fa-trash" ></i> </a>
				</td>
			</tr>
        	{% endfor %}
		</table>
{% endblock %}
