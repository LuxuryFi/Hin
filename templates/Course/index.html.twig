{% extends "base.html.twig" %}


{% block title %}Index
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style type="text/css">
		.important {
			color: #336699;
		}
	</style>
{% endblock %}
{% block body %}
	<h2 course="alert alert-primary"> <center>Course List</center></h2>
	<a href="/course/create" class="btn btn-primary">Add Course</a> <br><br>
	<table class="table table-bordered">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Option</th>
		</tr>
		{% for course in categories %}
			<tr>
				<td>{{ course.getCourseName() }}</td>
				<td>{{ course.getCourseDescription() }}</td>
				<td>
					<a href="/course/update/{{course.getId()}}"> <i class="fa fa-pen"></i> </a>
					<a href="/course/detail/{{course.getId()}}"> <i class="fa fa-eye"></i> </a>
					<a href="/course/delete/{{course.getId()}}" onclick="Confirm('You sua')"> <i class="fa fa-trash" ></i> </a>
				</td>
			</tr>
        	{% endfor %}
		</table>
{% endblock %}
